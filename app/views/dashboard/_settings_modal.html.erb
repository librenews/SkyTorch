<!-- Settings Modal -->
<div id="settings-modal" data-dashboard-target="settingsModal" class="fixed inset-0 bg-opacity-20 backdrop-blur-md hidden z-50">
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
      <div class="p-6">
    <div class="mt-3">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Settings</h3>
        <button data-action="click->dashboard#closeSettings" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <!-- LLM Provider Status -->
      <div class="mb-6">
        <h4 class="text-sm font-medium text-gray-700 mb-2">LLM Provider Status</h4>
        <div id="provider-status" class="text-sm text-gray-600">
          Loading...
        </div>
      </div>
      
      <!-- Provider List -->
      <div class="mb-6">
        <h4 class="text-sm font-medium text-gray-700 mb-2">Available Providers</h4>
        <div class="space-y-2">
          <% @providers.each do |provider| %>
            <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
              <div>
                <span class="text-sm font-medium text-gray-900"><%= provider.name %></span>
                <span class="text-xs text-gray-500 ml-2"><%= provider.provider_type.titleize %></span>
              </div>
              <% if provider.is_active %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Active
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>


