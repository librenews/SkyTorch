<!-- Navigation -->
<nav class="p-4 space-y-2">
  <button id="new-chat-btn" class="w-full text-left p-3 rounded-lg hover:bg-gray-100 transition-colors group">
    <div class="flex items-center space-x-3">
      <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center flex-shrink-0">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      </div>
      <div class="flex-1 min-w-0 chat-navigation-content">
        <p class="text-sm font-medium text-gray-900">New Chat</p>
        <p class="text-xs text-gray-500">Start a new conversation</p>
      </div>
    </div>
  </button>
  
  <div class="space-y-1 chat-navigation-content">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider px-2">Recent Chats</h3>
    <div id="chat-list-container" class="max-h-96 overflow-y-auto scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-gray-100 force-scrollbar always-show-scrollbar" style="min-height: 200px;">
      <div id="chat-list" class="space-y-1" style="padding-bottom: 20px;">
        <% if @chats.present? %>
          <% @chats.each do |chat| %>
            <div class="chat-item-container group relative" data-chat-id="<%= chat.id %>">
              <button class="chat-item w-full text-left px-3 py-2 rounded-lg hover:bg-gray-100 transition-colors" data-chat-id="<%= chat.id %>">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-gray-200 rounded-lg flex items-center justify-center">
                    <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate"><%= chat.title %></p>
                    <p class="text-xs text-gray-500"><%= pluralize(chat.messages.count, 'message') %></p>
                  </div>
                </div>
              </button>
            </div>
          <% end %>
        <% else %>
          <div class="py-4 px-3 text-center">
            <p class="text-xs text-gray-400">No chats yet</p>
            <p class="text-xs text-gray-400">Start a new chat to begin</p>
          </div>
        <% end %>
      </div>
      <div id="chat-loading" class="hidden py-2 px-3">
        <div class="flex items-center justify-center space-x-2">
          <div class="w-4 h-4 border-2 border-gray-300 border-t-blue-600 rounded-full animate-spin"></div>
          <span class="text-xs text-gray-500">Loading more chats...</span>
        </div>
      </div>
      <div id="chat-end" class="hidden py-2 px-3">
        <div class="text-center">
          <span class="text-xs text-gray-400">No more chats</span>
        </div>
      </div>
    </div>
  </div>
</nav>
