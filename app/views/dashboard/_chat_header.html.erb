<!-- Chat Header -->
<div id="chat-header" class="bg-white border-b border-gray-200 px-6 py-4">
  <div class="flex items-center justify-between">
    <div>
      <h2 id="chat-title" class="text-xl font-semibold text-gray-900" data-dashboard-target="chatTitle">Welcome to SkyTorch</h2>
      <p id="chat-subtitle" class="text-sm text-gray-500" data-dashboard-target="chatSubtitle">Start a new conversation or select an existing chat</p>
    </div>
    <div class="flex items-center space-x-4">
      <!-- User Profile Area -->
      <div class="flex items-center space-x-2">
        <% if current_user.avatar_url.present? %>
          <img src="<%= current_user.avatar_url %>" alt="<%= current_user.display_name %>" class="w-8 h-8 rounded-full">
        <% else %>
          <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white text-sm font-medium">
            <%= current_user.display_name.first.upcase %>
          </div>
        <% end %>
        <div class="flex flex-col">
          <span class="text-sm font-medium text-gray-700"><%= current_user.display_name %></span>
          <span class="text-xs text-gray-500">@<%= current_user.bluesky_handle %></span>
        </div>
      </div>
      <%= link_to "Sign Out", sign_out_path, method: :delete, class: "text-sm text-gray-500 hover:text-gray-700" %>
    </div>
  </div>
</div>
