<!-- Chat Header -->
<div id="chat-header" class="fixed top-0 left-0 right-0 lg:left-80 bg-white border-b border-gray-200 px-6 py-4 z-20">
  <div class="flex items-center justify-between">
    <div>
      <h2 id="chat-title" class="text-xl font-semibold text-gray-900" data-dashboard-target="chatTitle">Welcome to SkyTorch</h2>
      <p id="chat-subtitle" class="text-sm text-gray-500" data-dashboard-target="chatSubtitle">Start a new conversation or select an existing chat</p>
    </div>
    <div id="chat-actions-container" class="hidden">
      <%= render 'dashboard/chat_actions_menu', mobile: false %>
    </div>
  </div>
</div>
