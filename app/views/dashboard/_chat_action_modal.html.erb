<!-- Chat Action Confirmation Modal -->
<div id="chat-action-modal" class="fixed inset-0 bg-opacity-20 backdrop-blur-md hidden z-50">
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
      <div class="p-6">
        <div class="flex items-center space-x-3 mb-4">
          <div id="modal-icon" class="w-10 h-10 rounded-full flex items-center justify-center">
            <!-- Icon will be set dynamically -->
          </div>
          <div>
            <h3 id="modal-title" class="text-lg font-semibold text-gray-900"></h3>
            <p id="modal-subtitle" class="text-sm text-gray-500"></p>
          </div>
        </div>
        <p id="modal-description" class="text-gray-700 mb-6">
          <!-- Description will be set dynamically -->
        </p>
        <div class="flex justify-end space-x-3">
          <button id="cancel-action" class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium transition-colors">
            Cancel
          </button>
          <button id="confirm-action" class="px-4 py-2 text-white rounded-lg font-medium transition-colors">
            <!-- Button text will be set dynamically -->
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
