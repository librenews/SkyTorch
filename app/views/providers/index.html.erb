<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto p-6">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">LLM Providers</h1>
      <p class="text-gray-600">Manage your AI model providers and API keys</p>
    </div>

    <!-- Add New Provider Form -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Add New Provider</h2>
      
      <%= form_with model: @new_provider, url: providers_path, local: true, class: "space-y-4" do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= form.label :provider_type, "Provider Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.select :provider_type, 
                options_for_select([
                  ['OpenAI', 'openai'],
                  ['Anthropic', 'anthropic'],
                  ['Google', 'google'],
                  ['Mock (Testing)', 'mock']
                ]), 
                { prompt: "Select a provider" }, 
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
          </div>
          
          <div>
            <%= form.label :api_key, "API Key", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.password_field :api_key, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Enter your API key" %>
          </div>
        </div>
        
        <div class="flex justify-end">
          <%= form.submit "Add Provider", 
              class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>

    <!-- Existing Providers -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Your Providers</h2>
      
      <% if @providers.any? %>
        <div class="space-y-4">
          <% @providers.each do |provider| %>
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="flex items-center space-x-3">
                    <h3 class="text-lg font-medium text-gray-900"><%= provider.name %></h3>
                    <% if provider.is_active %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Active
                      </span>
                    <% end %>
                  </div>
                  <p class="text-sm text-gray-600 mt-1">
                    Type: <%= provider.provider_type.titleize %> | 
                    Model: <%= provider.default_model %>
                  </p>
                  <p class="text-xs text-gray-500 mt-1">
                    Created: <%= provider.created_at.strftime("%B %d, %Y") %>
                  </p>
                </div>
                
                <div class="flex space-x-2">
                  <% unless provider.is_active %>
                    <%= button_to "Set as Default", set_default_provider_path(provider),
                        method: :post,
                        class: "px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                  <% end %>
                  
                  <%= button_to "Delete", provider_path(provider),
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete this provider?" },
                      class: "px-3 py-1 bg-red-600 text-white text-sm rounded hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <p class="text-gray-500">No providers configured yet. Add your first provider above.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
