<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8">
      <%= link_to "← Back to chats", chats_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
    </div>
    
    <div class="bg-white rounded-lg shadow-sm border p-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">Start a New Chat</h1>
      
      <%= form_with model: @chat, local: true, class: "space-y-6" do |form| %>
        <% if @chat.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="text-red-800 font-medium mb-2">
              <%= pluralize(@chat.errors.count, "error") %> prohibited this chat from being saved:
            </div>
            <ul class="text-red-700 text-sm space-y-1">
              <% @chat.errors.full_messages.each do |message| %>
                <li>• <%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div>
          <%= form.label :title, "Chat Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Enter a title for your chat..." %>
        </div>
        
        <div class="flex justify-end space-x-4">
          <%= link_to "Cancel", chats_path, class: "px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium transition-colors" %>
          <%= form.submit "Create Chat", class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
