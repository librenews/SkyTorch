<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto py-8 px-4">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Skytorch Chat</h1>
      <div class="flex space-x-4">
        <%= link_to "LLM Providers", llm_providers_path, class: "text-blue-600 hover:text-blue-700 font-medium py-2 px-4 border border-blue-600 rounded-lg transition-colors" %>
        <%= link_to "New Chat", new_chat_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-sm border">
      <% if @chats.any? %>
        <div class="divide-y divide-gray-200">
          <% @chats.each do |chat| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <%= link_to chat_path(chat), class: "block" do %>
                <div class="flex justify-between items-start">
                  <div>
                    <h3 class="text-lg font-medium text-gray-900"><%= chat.title %></h3>
                    <p class="text-sm text-gray-500 mt-1">
                      <%= pluralize(chat.messages.count, 'message') %> â€¢ 
                      Created <%= time_ago_in_words(chat.created_at) %> ago
                    </p>
                  </div>
                  <div class="text-gray-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="p-12 text-center">
          <div class="text-gray-400 mb-4">
            <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No chats yet</h3>
          <p class="text-gray-500 mb-6">Start a new conversation to begin chatting with AI and MCP tools.</p>
          <%= link_to "Create your first chat", new_chat_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
