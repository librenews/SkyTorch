<div class="min-h-screen bg-gray-50 flex flex-col">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200 px-6 py-4">
    <div class="max-w-4xl mx-auto flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <%= link_to "← Back to chats", chats_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
        <h1 class="text-xl font-semibold text-gray-900"><%= @chat.title %></h1>
      </div>
      <div class="text-sm text-gray-500">
        <%= pluralize(@messages.count, 'message') %>
      </div>
    </div>
  </div>
  
  <!-- Messages -->
  <div class="flex-1 max-w-4xl mx-auto w-full px-6 py-6">
    <div class="bg-white rounded-lg shadow-sm border h-full flex flex-col">
      <!-- Messages List -->
      <div class="flex-1 overflow-y-auto p-6 space-y-4" id="messages">
        <% @messages.each do |message| %>
          <div class="flex <%= message.role == 'user' ? 'justify-end' : 'justify-start' %>">
            <div class="max-w-3xl <%= message.role == 'user' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-900' %> rounded-lg px-4 py-2">
              <div class="text-sm font-medium mb-1">
                <%= message.role.titleize %>
              </div>
              <div class="whitespace-pre-wrap"><%= message.content %></div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Message Input -->
      <div class="border-t border-gray-200 p-6">
        <%= form_with model: [@chat, Message.new], local: true, class: "flex space-x-4" do |form| %>
          <%= form.text_area :content, 
              rows: 1, 
              class: "flex-1 resize-none border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Type your message...",
              data: { 
                controller: "autosize",
                action: "input->autosize#resize"
              } %>
          <%= form.submit "Send", class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  // Auto-scroll to bottom of messages
  const messagesContainer = document.getElementById('messages');
  messagesContainer.scrollTop = messagesContainer.scrollHeight;
</script>
